<body>
    <nav id="navigation">
        <ul> 
          <div id="logo"><img src="/static/img/logo1.png">HDA</div>
          <li><a href="/">Home</a></li>
          <li><a href="/">About</a>      </li>
          <li><a href="/">Services</a> </li>
          <li><a href="/contact">Contact Us</a></li>
          <li><a href="/register">SignUp</a> </li>
        </ul>
